CREATE TABLE USER_PROFILE(
ID_USER INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
ID_SLACK VARCHAR(30),
USERNAME VARCHAR(30),
FULL_NAME VARCHAR(100),
AGE INT,
GENDER VARCHAR(30),
MAIL VARCHAR(100),
IMAGE VARCHAR(500)
);
CREATE TABLE USER_COMPANY(
ID_USER INT NOT NULL PRIMARY KEY,
DESCRIPTION VARCHAR(500),
GITHUB VARCHAR(200),
LINKEDIN VARCHAR(200),
FOREIGN KEY (ID_USER)
        REFERENCES USER_PROFILE(ID_USER)
        ON DELETE CASCADE
);

CREATE TABLE USER_COUPLE(
ID_USER INT NOT NULL PRIMARY KEY,
DESCRIPTION VARCHAR(500),
SEARCHING INT,
WORKING VARCHAR(100),
STUDYING VARCHAR(100),
FOREIGN KEY (ID_USER)
        REFERENCES USER_PROFILE(ID_USER)
        ON DELETE CASCADE
);
CREATE TABLE COMPANY(
ID_COMPANY INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
COMPANY_NAME VARCHAR(100),
LOGO VARCHAR(500),
WEB VARCHAR(200)
);
CREATE TABLE WORK_OFFER(
ID_WORK_OFFER INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
ID_COMPANY INT NOT NULL,
CITY VARCHAR(50),
SALARY VARCHAR(50),
DESCRIPTION VARCHAR(500),
FOREIGN KEY (ID_COMPANY)
        REFERENCES COMPANY(ID_COMPANY)
        ON DELETE CASCADE
);

CREATE TABLE INTEREST(
ID_INTEREST INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
TAGNAME VARCHAR(50)
);

CREATE TABLE INTEREST_COUPLE(
ID_INTEREST INT NOT NULL,
ID_USER INT NOT NULL,
FOREIGN KEY (ID_INTEREST)
        REFERENCES INTEREST(ID_INTEREST)
        ON DELETE CASCADE,
FOREIGN KEY (ID_USER)
        REFERENCES USER_PROFILE(ID_USER)
        ON DELETE CASCADE
);

CREATE TABLE INTEREST_HACKBUDDY(
ID_INTEREST INT NOT NULL,
ID_USER INT NOT NULL,
FOREIGN KEY (ID_INTEREST)
        REFERENCES INTEREST(ID_INTEREST)
        ON DELETE CASCADE,
FOREIGN KEY (ID_USER)
        REFERENCES USER_PROFILE(ID_USER)
        ON DELETE CASCADE
);

CREATE TABLE INTEREST_WORK_OFFER(
ID_INTEREST INT NOT NULL,
ID_USER INT NOT NULL,
FOREIGN KEY (ID_INTEREST)
        REFERENCES INTEREST(ID_INTEREST)
        ON DELETE CASCADE,
FOREIGN KEY (ID_USER)
        REFERENCES USER_PROFILE(ID_USER)
        ON DELETE CASCADE
);

CREATE TABLE MATCH_COUPLE(
ID_LIKE_FROM INT NOT NULL,
ID_LIKE_TO INT NOT NULL,
SUPERLIKE BOOLEAN DEFAULT FALSE,
FOREIGN KEY (ID_LIKE_FROM)
        REFERENCES USER_PROFILE(ID_USER)
        ON DELETE CASCADE,
FOREIGN KEY (ID_LIKE_FROM)
        REFERENCES USER_PROFILE(ID_USER)
        ON DELETE CASCADE
);

CREATE TABLE MATCH_WORK(
ID_LIKE_FROM INT NOT NULL,
ID_LIKE_TO INT NOT NULL,
SUPERLIKE BOOLEAN DEFAULT FALSE,
FOREIGN KEY (ID_LIKE_FROM)
        REFERENCES USER_PROFILE(ID_USER)
        ON DELETE CASCADE,
FOREIGN KEY (ID_LIKE_FROM)
        REFERENCES USER_PROFILE(ID_USER)
        ON DELETE CASCADE
);

CREATE TABLE MATCH_HACKBUDDY(
ID_LIKE_FROM INT NOT NULL,
ID_LIKE_TO INT NOT NULL,
SUPERLIKE BOOLEAN DEFAULT FALSE,
FOREIGN KEY (ID_LIKE_FROM)
        REFERENCES USER_PROFILE(ID_USER)
        ON DELETE CASCADE,
FOREIGN KEY (ID_LIKE_FROM)
        REFERENCES USER_PROFILE(ID_USER)
        ON DELETE CASCADE
);
